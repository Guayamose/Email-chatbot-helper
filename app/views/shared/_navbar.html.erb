<nav class="navbar navbar-expand-sm">
  <div class="container">
    <!-- Brand -->
    <%= link_to chats_path, class: "navbar-brand d-flex" do %>
      <p class="mb-0 me-2">MailAi</p>
      <%= image_tag "icons/MailAi-Logo.png", class: "mail-logo" %>
    <% end %>
    <!-- Toggler button (shows on mobile) -->
    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
      <span class="navbar-toggler-icon"></span>
    </button>
    <!-- Collapsible links -->
    <div class="collapse navbar-collapse" id="navbarNav">
      <ul class="navbar-nav ms-auto">
        <% if user_signed_in? %>
          <li class="nav-item">
            <span class="nav-link"><%= current_user.email %></span>
          </li>
        <% else %>
          <li class="nav-item">
            <span class="nav-link">Not currently logged in</span>
          </li>
        <% end %>
        <li class="nav-item" data-controller="alert">
          <%= link_to "Log Out", destroy_user_session_path,
            class: "nav-link",
            data: { action: "click->alert#confirmLogout", turbo_method: :delete }%>
        </li>
      </ul>
    </div>
  </div>
</nav>
