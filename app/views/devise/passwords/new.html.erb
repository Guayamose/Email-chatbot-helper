<div class="box mt-5 m-4 w-50 mx-auto h-100 rounded-5 p-5">
<h2>Forgot your password?</h2>

<%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :email,
                required: true,
                autofocus: true,
                input_html: { placeholder: "email", autocomplete: "email", class: "pill-input" } %>
  </div>

  <div class="btn btn-dark btn-sm rounded-5 w-50">
    <%= f.button :submit, "Send me reset password instructions", class: "text-light" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
</div>
