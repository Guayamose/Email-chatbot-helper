<!-- Side navigation -->
<div class="sidenav">
  <div class="d-flex flex-column justify-content-center">
    <% @chats.each do |chat| %>
      <div class="sidenav-item">
        <%= chat.title %>
      </div>
    <% end %>
  </div>
</div>
<!-- Page content -->
<div class="main">
  <div class="container text-center">
    <div class="row message-area">
      <% @messages.each do |message| %>
        <div class="row">
          <div class="col mb-2">
            <% if message.who_sent === 'user' %>
              <div class="chat-box">
                <p><%= message.content %></p>
              </div>
            <% end %>
          </div>
          <div class="col">
            <% unless message.who_sent === 'user' %>
              <div class="chat-box">
                <p><%= message.content %></p>
              </div>
            <% end %>
            <br>
          </div>
        </div>
      <% end %>
    </div>
    <div class="d-flex justify-content-between bg-secondary">
      <div class="bg-primary" style="height:50px">
      </div>
      <div class="send-button">
        <%= link_to '#' do %>
          <i class="fa-regular fa-paper-plane"></i>
        <% end %>
      </div>
    </div>
  </div>
</div>
